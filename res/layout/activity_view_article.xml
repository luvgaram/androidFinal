<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/view_article_textView_writer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="글쓴이"
            android:textColor="#327093" />

        <TextView
            android:id="@+id/view_article_textView_write_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:text="write time"
            android:textColor="#bbbbbb" />

    </LinearLayout>

    <ImageView
        android:id="@+id/view_article_imageView_photo"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/view_article_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="#327093"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/view_article_textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본문"
        android:textSize="25dp" />

</LinearLayout>